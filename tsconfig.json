{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@styles/*": ["styles/*"],
      "@pages/*": ["pages/*"],
      "@pages-content/*": ["pages-content/*"],
      "@shared/*": ["shared/*"],
      "@components/*": ["components/*"],
      "@store/*": ["store/*"],
      "@public/*": ["public/*"],
      "@images/*": ["public/images/*"],
      "@icons/*": ["public/icons/*"],
      "@constants/*": ["shared/services/UrlService/constants/*"],
      "@mytypes/*": ["types/*"],
      "@context/*": ["context/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
